<header>
  <div class="stickyHeader">
    <div class="topNav">
      <div class="logo">
        <a href="/">
          <img src="../img/logo.webp" alt="logo" />
        </a>
      </div>

      <div class="burgerMenu toggleMenu">
        <span class="bar"></span>
        <span class="bar"></span>
        <span class="bar"></span>
      </div>
    </div>
  </div>

  <div class="navItems">
    <ul class="menu">
      <li>
        <a href="/">Forside</a>
        <div class="headerUnderline"></div>
      </li>
      <li>
        <a href="/recipes">Opskrifter</a>
        <div class="headerUnderline"></div>
      </li>
      <li>
        <a target="_blank" href="https://quepasapapi.com/da/collections/shop-all">Shop</a>
        <div class="headerUnderline"></div>
