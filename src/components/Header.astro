<header>
  <div class="stickyHeader">
    <div class="topNav">
      <div class="logo">
        <a href="/">
          <img src="img/logo.png" alt="" />
        </a>
      </div>

      <div class="burgerMenu toggleMenu">
        <span class="bar"></span>
        <span class="bar"></span>
        <span class="bar"></span>
      </div>
    </div>
  </div>

  <div class="navItems">
    <ul class="menu">
      <li>
        <a href="/">Summer Bundle</a>
        <div class="headerUnderline"></div>
      </li>
      <li>
        <a target="_blank" href="https://quepasapapi.com/da/pages/about-us">Opskrifter</a>
        <div class="headerUnderline"></div>
      </li>
      <li>
        <a target="_blank" href="https://quepasapapi.com/da/collections/shop-all">Shop</a>
        <div class="headerUnderline"></div>
