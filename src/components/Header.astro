<style>
  .headerUnderline {
    background-color: black;
    height: 1.5px;
  }
  .stickyHeader {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 50;
  }
  .topNav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
  }

  img {
    width: 17.5%;
  }

  .navItems {
    position: fixed;
    left: 100%;
    top: 0px;
    background-color: rgba(204, 233, 75, 0.98);
    width: 50%;
    height: 100vh;
    transition: 1s;
    padding-block: 1rem;
    font-size: 1rem;
    z-index: 1;
  }

  .menu {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    padding: 6rem 0 0 10%;
  }

  .menu li {
    list-style-type: none;
    text-align: right;
    margin-right: 10%;
    z-index: 100;
  }

  .menu li a {
    color: black;
    text-decoration: none;
    font-weight: bold;
    text-transform: uppercase;
  }

  .menu li a:hover {
    opacity: 0.5;
  }

  .burgerMenu {
    cursor: pointer;
    z-index: 10;
  }

  .bar {
    display: block;
    width: 25px;
    height: 4px;
    margin: 5px auto;
    -webkit-transition: all 0.5s ease-in-out;
    transition: all 0.5s ease-in-out;
    background-color: black;
  }

  .burgerMenu.active .bar {
    background-color: black;
  }

  .burgerMenu.active .bar:nth-child(2) {
    opacity: 0;
    transition: all 0.25s ease-in-out;
  }

  .burgerMenu.active .bar:nth-child(1) {
    transform: translateY(10px) rotate(50deg);
  }
  .burgerMenu.active .bar:nth-child(3) {
    transform: translateY(-8px) rotate(-50deg);
  }
  .navItems.active {
    left: 50%;
  }

  /*__________ TABLET __________*/
  @media only screen and (min-width: 481px) {
  }

  /*__________ WEB (SMALLER SCREENS) __________*/
  @media only screen and (min-width: 769px) {
    .topNav {
      padding: 2rem;
    }

    .bar {
      width: 37.5px;
      height: 6px;
    }

    .burgerMenu.active .bar:nth-child(1) {
      transform: translateY(14px) rotate(50deg);
    }
    .burgerMenu.active .bar:nth-child(3) {
      transform: translateY(-8px) rotate(-50deg);
    }

    .menu {
      padding-top: 8rem;
    }
  }

  /*__________ WEB __________*/
  @media only screen and (min-width: 1025px) {
    .navItems {
      width: 33%;
      font-size: 1.5rem;
    }

    .navItems.active {
      left: 67%;
    }
  }
</style>
