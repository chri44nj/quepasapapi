---
const { order, link, title } = Astro.props;
---

<div class="recipeGrid">
  <img class={order} src={link} alt="delicious recipe" />
  <div>
    <h3>{title}</h3>
    <slot />
  </div>
</div>

<style>
  .recipeGrid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    margin-inline: 10%;
    margin-block: 5rem;
    gap: 1rem;
  }

  img {
    width: 100%;
  }

  .recipeGrid div {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .second {
    order: 1;
  }

  h3 {
    text-transform: uppercase;
    font-size: 1.4rem;
  }

  /*__________ WEB (SMALLER SCREENS) __________*/
  @media only screen and (min-width: 769px) {
    h3 {
      font-size: 3rem;
      writing-mode: horizontal-tb;
    }

    .recipeGrid {
      gap: 3rem;
    }

    .recipeGrid div {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }
  }

  /*__________ WEB __________*/
  @media only screen and (min-width: 1025px) {
    h3 {
      font-size: 5rem;
    }
  }
</style>
