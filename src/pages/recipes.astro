---
import Secondarylayout from "../layouts/Secondarylayout.astro";
import RecipeCouple from "../components/RecipeCouple.astro";
import Button from "../components/Button.astro";
---

<Secondarylayout title="Opskrifter">
  <div class="recipeContainer">
    <span class="heading">
      <h2>Opskrifter</h2>
      <div class="underline"></div>
    </span>
    <div class="flexContainer">
      <p>Vores tapas er skabt til dele gode stunder med dine yndlingsmennesker. Gå på opdagelse i vores opskrifter og tag jeres tapasoplevelse til nye højder!</p>
    </div>
    <RecipeCouple title="Grøn Pesto" link="../img/pesto.webp">
      <Button variant="secondaryMedium" title="OPSKRIFT" link="../undersider/pesto" />
    </RecipeCouple>

    <RecipeCouple title="Bruschetta" link="../img/bruschetta.webp" order="second">
      <Button variant="secondaryMedium" title="OPSKRIFT" link="../undersider/bruschetta" />
    </RecipeCouple>

    <RecipeCouple title="Sangria" link="../img/sangria.webp">
      <Button variant="secondaryMedium" title="OPSKRIFT" link="../undersider/sangria" />
    </RecipeCouple>
  </div>
</Secondarylayout>

