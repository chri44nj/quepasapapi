<style>
  .recipeContainer {
    margin-bottom: 10rem;
  }

  .heading {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    padding-inline: 2rem;
    padding-top: 10rem;
  }

  h2 {
    text-transform: uppercase;
  }

  .flexContainer {
    display: flex;
    justify-content: flex-end;
    padding-inline: 2rem;
    margin-top: 1rem;
  }

  p {
    text-align: right;
  }

  .catchPhrase {
    margin-left: 10%;
    font-size: 1.5rem;
    font-weight: bold;
    margin-block: 5rem;
  }

  .times {
